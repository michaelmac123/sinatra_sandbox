:javascript

  $(document).ready(function(){

    function changeClass(){
      $('#hideMenu').addClass('hide');
    }
    $('.select-sub-category').click(changeClass);

    function showClass(){
      $('#hideMenu').removeClass('hide');
    }
    $('.nav-browser').mouseenter(showClass);



    function remOpacity(){
      $('#box').removeClass('dimmed');
    }
    $('.opacity').mouseenter(remOpacity);

    function addOpacity(){
      $('#box').addClass('dimmed');
    }
    $('.opacity').mouseout(addOpacity);





    $("div#enterleave-2").bind("mouseenter",function(){
      $("div.two",this).removeClass("dimmed");
      $("div#enterleave-1").addClass("dimmed");

    }).bind("mouseleave",function(){
      $("div.two",this).addClass("dimmed");
      $("div#enterleave-1").removeClass("dimmed");

    });





  });

